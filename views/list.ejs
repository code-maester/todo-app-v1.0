<%- include("header") %>
    <div class="box" id="heading">
      <h1>Hello, Today is: <%= date %> </h1>
    </div>

    <div class="box">
      <% if (newItem !== ""){ %>
        <% for (var i=0; i < newItem.length; i++){ %>
          <div class="item">
            <input type="checkbox">
            <p><%= newItem[i] %></p>
          </div>
        <% } %>
      <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="todo" value="" placeholder="Enter Todo">
        <button type="submit" name="button">+</button>
      </form>
    </div>

<%- include("footer") %>
